@if (_input != null)
{
    <div hg-dialog-mask>
        <EditForm Model=@_input hg-dialog-container OnValidSubmit=@HandleValidSubmit>
            <DataAnnotationsValidator />
            <div hg-dialog-title>Update Settings</div>
            <div hg-dialog-content>
                <label for="feeLimit">Maximum Allowed Transaction Fee (tℏ)</label>
                <InputNumber id="feeLimit" @bind-Value=@_input.FeeLimit placeholder="Max Transaction Fee (tℏ)" />
                <label for="transactionDuration">Valid Transaction Duration (sec)</label>
                <InputNumber id="transactionDuration" @bind-Value=@_input.TransactionDuration placeholder="Valid Transaction Duration (sec)" />
                <label for="waitDuration">Max Time to wait for Receipt (sec)</label>
                <InputNumber id="waitDuration" @bind-Value=@_input.ReceiptWaitDuration placeholder="Max Receipt Wait Duration (sec)" />
                <label for="waitRetry">Max Number of Get Receipt Retries</label>
                <InputNumber id="waitRetry" @bind-Value=@_input.ReceiptRetryCount placeholder="Max Receipt Retry Count" />
                <div class="status-message"><ValidationSummary /></div>
            </div>
            <div hg-dialog-footer>
                <button type="button" @onclick=@Close>Cancel</button>
                <button type="submit">Update Settings</button>
            </div>
        </EditForm>
    </div>
}
